

{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "vite.config.*",
    "@types.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "src/**.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "plotly.js-basic-dist-min": [
        "node_modules/@types/plotly.js"
      ]
    }
  }
}
